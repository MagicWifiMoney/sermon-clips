generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                      String               @id @default(cuid())
  clerkId                 String               @unique
  email                   String               @unique
  name                    String?
  imageUrl                String?
  plan                    String               @default("free")
  sermonsProcessed        Int                  @default(0)
  onboardingStep          String?
  onboardingData          Json?
  onboardingCompletedAt   DateTime?
  brandingConfig          Json?
  connectedYoutubeChannel Json?
  sermons                 Sermon[]
  socialAccounts          SocialAccount[]
  processingTemplates     ProcessingTemplate[]
  sermonSeries            SermonSeries[]
  montages                Montage[]
  campuses                Campus[]
  courses                 Course[]
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @updatedAt
}

enum SermonStatus {
  UPLOADING
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum ContentType {
  SUMMARY_SHORT
  SUMMARY_LONG
  YOUTUBE_DESCRIPTION
  DISCUSSION_GUIDE
  DEVOTIONAL_PLAN
  BLOG_POST
  KEY_QUOTES
  BIBLE_VERSES
  SOCIAL_POST
}

enum ContentStatus {
  GENERATING
  COMPLETED
  FAILED
}

model Sermon {
  id                String          @id @default(cuid())
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  title             String
  sourceType        String
  sourceUrl         String?
  durationSeconds   Int?
  mosaicRunId       String?         @unique
  status            SermonStatus    @default(PENDING)
  progress          Int             @default(0)
  errorMessage      String?
  processingOptions Json?
  publishMode       String          @default("review")
  transcript        Json?
  seriesId          String?
  series            SermonSeries?   @relation(fields: [seriesId], references: [id], onDelete: SetNull)
  campusId          String?
  clips             Clip[]
  contentPieces     ContentPiece[]
  graphics          Graphic[]
  suggestedClips    SuggestedClip[]
  scheduledPosts    ScheduledPost[]
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([userId, createdAt(sort: Desc)])
  @@index([seriesId])
}

model Clip {
  id              String            @id @default(cuid())
  sermonId        String
  sermon          Sermon            @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  title           String?
  durationSeconds Float?
  format          String?
  videoUrl        String?
  thumbnailUrl    String?
  downloadCount   Int               @default(0)
  publications    ClipPublication[]
  analytics       ClipAnalytics[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([sermonId])
}

model ContentPiece {
  id        String        @id @default(cuid())
  sermonId  String
  sermon    Sermon        @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  type      ContentType
  title     String?
  content   String        @db.Text
  metadata  Json?
  status    ContentStatus @default(GENERATING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([sermonId, type])
}

model SocialAccount {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  platform    String
  accountName String?
  accountId   String?
  accessToken String?
  connected   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, platform])
  @@index([userId])
}

model ClipPublication {
  id           String    @id @default(cuid())
  clipId       String
  clip         Clip      @relation(fields: [clipId], references: [id], onDelete: Cascade)
  platform     String
  caption      String?
  scheduledAt  DateTime?
  publishedAt  DateTime?
  status       String    @default("draft")
  externalUrl  String?
  errorMessage String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([clipId])
  @@index([status])
}

model ClipAnalytics {
  id        String   @id @default(cuid())
  clipId    String
  clip      Clip     @relation(fields: [clipId], references: [id], onDelete: Cascade)
  platform  String
  views     Int      @default(0)
  likes     Int      @default(0)
  shares    Int      @default(0)
  comments  Int      @default(0)
  date      DateTime
  createdAt DateTime @default(now())

  @@index([clipId, platform, date])
}

model ScheduledPost {
  id           String    @id @default(cuid())
  sermonId     String
  sermon       Sermon    @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  clipId       String?
  platform     String
  caption      String?
  scheduledFor DateTime
  publishedAt  DateTime?
  status       String    @default("pending")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([sermonId])
  @@index([scheduledFor, status])
}

model ProcessingTemplate {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name              String
  description       String?
  isDefault         Boolean  @default(false)
  processingOptions Json
  publishMode       String   @default("review")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
}

model SermonSeries {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  imageUrl    String?
  startDate   DateTime?
  endDate     DateTime?
  sermons     Sermon[]
  courses     Course[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model Montage {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title           String
  clipIds         String[]
  transitionStyle String   @default("crossfade")
  mosaicRunId     String?  @unique
  status          String   @default("PENDING")
  progress        Int      @default(0)
  videoUrl        String?
  thumbnailUrl    String?
  errorMessage    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
}

model Graphic {
  id        String   @id @default(cuid())
  sermonId  String
  sermon    Sermon   @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  type      String
  text      String?
  style     Json?
  imageUrl  String?
  status    String   @default("generating")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sermonId])
}

model Campus {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  brandingConfig Json?
  isDefault      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

model SuggestedClip {
  id        String   @id @default(cuid())
  sermonId  String
  sermon    Sermon   @relation(fields: [sermonId], references: [id], onDelete: Cascade)
  startTime Float
  endTime   Float
  topic     String
  hookScore Float
  summary   String?
  accepted  Boolean  @default(false)
  clipId    String?
  createdAt DateTime @default(now())

  @@index([sermonId])
}

model Course {
  id          String       @id @default(cuid())
  userId      String
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  seriesId    String
  series      SermonSeries @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  title       String
  description String?
  modules     Json
  status      String       @default("generating")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([userId])
  @@index([seriesId])
}
